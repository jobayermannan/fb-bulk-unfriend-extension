{
	"manifest_version": 2,
	"name": "Facebook Mass Unfriend",
	"version": "1.0",
	"description": "Unfriend all Facebook friends.",
	"permissions": [
	  "activeTab",
	  "https://www.facebook.com/*"
	],
	"browser_action": {
	  "default_popup": "popup.html",
	  "default_icon": {
		 "16": "icons/icon16.png",
		 "48": "icons/icon48.png",
		 "128": "icons/icon128.png"
	  }
	},
	"content_scripts": [
	  {
		 "matches": ["https://www.facebook.com/*"],
		 "js": ["content.js"]
	  }
	]
 }